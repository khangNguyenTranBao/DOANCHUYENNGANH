                            <li><a href="#"><span class="fa fa-star-o" aria-hidden="true"></span></a></li>
                        </ul>
                        <a href="@Url.Action("single", "Home", new { id = sp.Masanpham })">
                            
                        </a>
                        <button type="submit" class="btn submit">Chi tết sản phẩm </button>
                    </div>
                </div>
            </div> 
            }
        </div>
